{
    "name": "coesion/core",
    "type": "library",
    "description": "Collection of tools for rapid application development.",
    "keywords": ["framework","core","sdk","platform"],
    "homepage": "https://github.com/coesion/core",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "lastguest@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test-lint" : "find classes -type f -name '*.php' -exec php -l {} \\;",
     	"test" : "vendor/bin/phpunit --colors=always --configuration=phpunit.xml",
        "build-phar" : "php tools/build-phar.php",
        "serve-docs" : "php tools/serve-docs.php",
        "route-benchmark" : "php tools/route_debug.php",
        "changelog" : "docs/build-changelog.sh --skip-head > CHANGELOG.md && git add -A && git commit -am \"Updated CHANGELOG\""
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "classmap": [ "classes/" ]
    },
    "autoload-dev": {
        "classmap": [ "classes/", "tests/" ]
    }
}
