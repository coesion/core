{
    "name": "coesion/core-dev",
    "type": "library",
    "description": "Collection of tools for rapid application development.",
    "keywords": ["framework","core","sdk","platform"],
    "homepage": "https://github.com/coesion/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Azzolini",
            "email": "lastguest@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11"
    },
    "scripts": {
        "test-lint" : "find classes -type f -name '*.php' -exec php -l {} \\;",
        "test-static" : "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit=1G",
    	"test" : [
            "@test-static",
            "vendor/bin/phpunit --colors=always --configuration=phpunit.xml"
        ],
        "test-dist" : [
            "@build-core",
            "vendor/bin/phpunit --colors=always --configuration=phpunit.dist.xml"
        ],
        "test-all" : [
            "@test",
            "@test-dist"
        ],
        "test-silent" : "bash tools/test-silent.sh",
        "build-core" : "php tools/build-core.php",
        "build-artifact-repo" : [
            "@build-core",
            "php tools/build-artifact-repo.php"
        ],
        "build-js-artifact-repo" : "php tools/build-js-artifact-repo.php",
        "serve-docs" : "php tools/serve-docs.php",
        "docs" : "php tools/serve-docs.php",
        "docs-build-pages" : "php tools/build-docs-site.php --out=build/docs-site",
        "agent-audit" : "php tools/agent-audit.php --format=json --pretty",
        "route-benchmark" : "php tools/route_debug.php",
        "cli-demo" : "php tools/cli-demo.php demo",
        "release:plan" : "php tools/release-plan.php",
        "release:cut" : "php tools/release-cut.php",
        "release:check" : "php tools/release-check.php",
        "release:check-artifacts" : "php tools/release-check-artifacts.php"
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "autoload": {
        "classmap": [ "classes/" ]
    },
    "autoload-dev": {
        "classmap": [ "classes/", "tests/" ]
    }
}
